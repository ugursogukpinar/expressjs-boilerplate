{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {},
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            1,
            1000
        ],
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "arrow-body-style": [
            0,
            "as-needed"
        ],
        "comma-dangle": 0,
        "no-console": 0,
        "no-param-reassign": 0,
        "no-use-before-define": 0,
        "no-restricted-globals": 0,
        "class-methods-use-this": 0,
        "no-underscore-dangle": 0,
        "no-await-in-loop": 0,
        "prefer-destructuring": [
            "error",
            {
                "VariableDeclarator": {
                    "array": true,
                    "object": true
                },
                "AssignmentExpression": {
                    "array": false,
                    "object": false
                }
            },
            {
                "enforceForRenamedProperties": false
            }
        ]
    }
}